    Layout = "~/Views/shared/_pivma.main.dashboard.Header.cshtml";
    
}


@using BootstrapSupport
@model System.Collections.IEnumerable

<div class="span12">
    <h1>@ViewBag.Title</h1>
    <br />

    <table class="table table-bordered table-striped">
        <caption></caption>
        <thead>
            <tr>
                @foreach (var property in Model.VisibleProperties())
                {

                    <th>
                        @property.GetLabel().ToSeparatedWords()
                    </th>
                }
                <th></th>
            </tr>
        </thead>

        @*      <thead>
                            <tr>
                                <th>Imagen</th>                                
                                <th>Titulo</th>
                                <th>Descripción</th>
                                <th>Categoria</th>
                                <th>Vendedor</th>
                                <th>Precio</th>
                                <th>Inventario</th>
                            </tr>
                        </thead>*@

        @{ int index = 0; }
        @foreach (var model in Model)
        {
            ViewData[index.ToString()] = model;

            <tr>

                @*@model.VisibleProperties[0]*@
                @foreach (var property in model.VisibleProperties())
                {
                    if (property.Name == "Picture1")
                    {
                    
                    <td class="muted center_text"><a href="product.html">
                        <img alt="" src=@Html.Display(index + "." + property.Name) /></a></td>
                    
                    }
                
                    <td>
                        @Html.Display(index + "." + property.Name)
                    </td>                  
                }

            </tr>
                index++;
        }

    </table>

    <div class="pagination pagination-centered">
        <ul>
            <li><a href="#">Anterior</a></li>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li><a href="#">Siguiente</a></li>
        </ul>
    </div>

</div>

